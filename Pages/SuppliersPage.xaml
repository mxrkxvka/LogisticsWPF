<Page x:Class="LogisticsWPF.Pages.SuppliersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Поставщики"
      FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопки -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Справочник поставщиков"
                       FontSize="26"
                       FontWeight="ExtraBold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal">
                <Button Content="╋ Добавить"
                        Width="110"
                        Height="32"
                        Click="AddButton_Click"
                        Background="#27AE60"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"/>

                <Button Content="✎ Изменить"
                        Width="110"
                        Height="32"
                        Margin="10,0"
                        Click="EditButton_Click"
                        Background="#3498DB"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"/>

                <Button Content="🗑 Удалить"
                        Width="110"
                        Height="32"
                        Click="DeleteButton_Click"
                        Background="#E74C3C"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"/>
            </StackPanel>
        </StackPanel>

        <!-- Таблица -->
        <Border Grid.Row="1" CornerRadius="8" Background="White">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12"
                                  Opacity="0.1"
                                  ShadowDepth="1"/>
            </Border.Effect>

            <DataGrid x:Name="SuppliersDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      BorderThickness="0"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#F0F0F0"
                      RowHeight="38"
                      Background="Transparent">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F8F9FA"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#DCDDE1"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ИНН" Binding="{Binding TaxNumber}" Width="120"/>
                    <DataGridTextColumn Header="Наименование" Binding="{Binding CompanyTitle}" Width="2*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding ContactEmail}" Width="2*"/>
                    <DataGridTextColumn Header="Рейтинг" Binding="{Binding Rating}" Width="100"/>
                    <DataGridTextColumn Header="Условия оплаты" Binding="{Binding PayConditions}" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
