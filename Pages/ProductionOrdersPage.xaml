<Page x:Class="LogisticsWPF.Pages.ProductionOrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Производственные заказы" FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Производственный план" FontSize="26" FontWeight="ExtraBold" 
                       Foreground="#2C3E50" Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal">
                <Button Content="╋ Новый заказ" Width="140" Height="32" Click="AddOrder_Click" 
                        Background="#27AE60" Foreground="White" FontWeight="SemiBold" BorderThickness="0"/>

                <Button Content="✎ Изменить" Width="130" Height="32" Margin="10,0" Click="EditOrder_Click"
                        Background="#3498DB" Foreground="White" FontWeight="SemiBold" BorderThickness="0"/>

                <Button Content="⚡ Статус" Width="130" Height="32" Click="UpdateStatus_Click"
                        Background="#F39C12" Foreground="White" FontWeight="SemiBold" BorderThickness="0"/>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1" CornerRadius="8" Background="White">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" Opacity="0.1" ShadowDepth="1"/>
            </Border.Effect>

            <DataGrid x:Name="OrdersGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      BorderThickness="0"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#F0F0F0"
                      RowHeight="38"
                      Background="Transparent"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F8F9FA"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#DCDDE1"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Артикул" Binding="{Binding SKU}" Width="120"/>
                    <DataGridTextColumn Header="Изделие" Binding="{Binding ProductName}" Width="2*"/>
                    <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="*"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*"/>
                </DataGrid.Columns>

            </DataGrid>
        </Border>
    </Grid>
</Page>