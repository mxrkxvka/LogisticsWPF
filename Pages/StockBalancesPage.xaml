<Page x:Class="LogisticsWPF.Pages.StockBalancesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Остатки на складе"
      FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Остатки на складе"
                   FontSize="26"
                   FontWeight="ExtraBold"
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"/>

        <!-- Таблица -->
        <Border Grid.Row="1" CornerRadius="8" Background="White">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12"
                                  Opacity="0.1"
                                  ShadowDepth="1"/>
            </Border.Effect>

            <DataGrid x:Name="StockGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      BorderThickness="0"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#F0F0F0"
                      RowHeight="38"
                      Background="Transparent">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F8F9FA"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#DCDDE1"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Склад" Binding="{Binding StorageName}" Width="2*"/>
                    <DataGridTextColumn Header="Материал" Binding="{Binding ComponentName}" Width="2*"/>
                    <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="120"/>
                    <DataGridTextColumn Header="Ед. изм." Binding="{Binding MeasureName}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
