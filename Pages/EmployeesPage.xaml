<Page x:Class="LogisticsWPF.Pages.EmployeesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Сотрудники" FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Управление персоналом" FontSize="26" FontWeight="ExtraBold" 
                       Foreground="#2C3E50" Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal">
                <Button Content="╋ Добавить" Width="110" Height="32" Click="Add_Click" 
                        Background="#27AE60" Foreground="White" FontWeight="SemiBold" BorderThickness="0"/>

                <Button Content="✎ Изменить" Width="110" Height="32" Margin="10,0" Click="Edit_Click"
                        Background="#3498DB" Foreground="White" FontWeight="SemiBold" BorderThickness="0"/>

                <Button Content="🗑 Удалить" Width="110" Height="32" Click="Delete_Click"
                        Background="#E74C3C" Foreground="White" FontWeight="SemiBold" BorderThickness="0"/>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1" CornerRadius="8" Background="White">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="1"/>
            </Border.Effect>

            <DataGrid x:Name="EmployeesGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      ColumnWidth="*"
                      BorderThickness="0"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#F0F0F0"
                      RowHeight="35"
                      Background="Transparent">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F8F9FA"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#DCDDE1"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Фамилия" Binding="{Binding Surname}"/>
                    <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}"/>
                    <DataGridTextColumn Header="Отчество" Binding="{Binding Patronymic}"/>
                    <DataGridTextColumn Header="Должность" Binding="{Binding JobTitles.Title}"/>
                    <DataGridTextColumn Header="Отдел" Binding="{Binding Departments.DeptName}"/>
                    <DataGridTextColumn Header="Уровень" Binding="{Binding SkillLevels.LevelName}"/>
                    <DataGridTextColumn Header="Оплата" Binding="{Binding PaymentTypes.TypeName}"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding StaffStatuses.StatusName}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>