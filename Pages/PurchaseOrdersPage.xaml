<Page x:Class="LogisticsWPF.Pages.PurchaseOrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Закупки"
      FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопки -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Закупки"
                       FontSize="26"
                       FontWeight="ExtraBold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal">
                <Button Content="╋ Добавить"
                        Width="120"
                        Height="32"
                        Click="Add_Click"
                        Background="#27AE60"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"/>

                <Button Content="✎ Изменить"
                        Width="120"
                        Height="32"
                        Margin="10,0"
                        Click="Edit_Click"
                        Background="#3498DB"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"/>

                <Button Content="✔ Приёмка"
                        Width="120"
                        Height="32"
                        Click="Receipt_Click"
                        Background="#F39C12"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"/>

                <Button Content="📦 Остатки"
                        Width="150"
                        Height="32"
                        Margin="10,0"
                        Click="StockBalances_Click"
                        Background="#8E44AD"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"/>
            </StackPanel>
        </StackPanel>

        <!-- Таблица -->
        <Border Grid.Row="1" CornerRadius="8" Background="White">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12"
                                  Opacity="0.1"
                                  ShadowDepth="1"/>
            </Border.Effect>

            <DataGrid x:Name="OrdersGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      BorderThickness="0"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#F0F0F0"
                      RowHeight="38"
                      Background="Transparent">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F8F9FA"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#DCDDE1"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Поставщик" Binding="{Binding VendorName}" Width="2*"/>
                    <DataGridTextColumn Header="Склад" Binding="{Binding StorageName}" Width="*"/>
                    <DataGridTextColumn Header="Дата заказа" Binding="{Binding OrderDate, StringFormat=d}" Width="120"/>
                    <DataGridTextColumn Header="Дата поставки" Binding="{Binding DeliveryDate, StringFormat=d}" Width="120"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding StatusName}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
