<Window x:Class="LogisticsWPF.Windows.EquipmentEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование оборудования"
        Width="420"
        Height="Auto"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundColor}"
        FontFamily="{StaticResource AppFont}">
    <Border Padding="20">
        <StackPanel>
            <!-- Заголовок -->
            <TextBlock Text="Данные оборудования"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryColor}"
                       Margin="0,0,0,20"/>

            <!-- Форма ввода -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="500">
                <StackPanel>
                    <TextBlock Text="Инвентарный номер" FontWeight="SemiBold"/>
                    <TextBox x:Name="InventoryNumberTextBox"/>

                    <TextBlock Text="Модель" Margin="0,10,0,0" FontWeight="SemiBold"/>
                    <ComboBox x:Name="ModelComboBox"
                              DisplayMemberPath="ModelName"
                              SelectedValuePath="ModelID"/>

                    <TextBlock Text="Тип" Margin="0,10,0,0" FontWeight="SemiBold"/>
                    <ComboBox x:Name="TypeComboBox"
                              DisplayMemberPath="TypeName"
                              SelectedValuePath="TypeID"/>

                    <TextBlock Text="Статус" Margin="0,10,0,0" FontWeight="SemiBold"/>
                    <ComboBox x:Name="StatusComboBox"
                              DisplayMemberPath="StatusName"
                              SelectedValuePath="StatusID"/>

                    <TextBlock Text="Дата ввода в эксплуатацию" Margin="0,10,0,0" FontWeight="SemiBold"/>
                    <DatePicker x:Name="CommissionDatePicker"/>

                    <TextBlock Text="График обслуживания" Margin="0,10,0,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="MaintenanceScheduleTextBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопки управления -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button Content="Сохранить"
                        Width="120"
                        Height="35"
                        Click="Save_Click"
                        Background="{StaticResource AccentColor}"/>
                <Button Content="Отмена"
                        Width="120"
                        Height="35"
                        Margin="10,0,0,0"
                        Click="Cancel_Click"
                        Background="#B0B9C2"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
