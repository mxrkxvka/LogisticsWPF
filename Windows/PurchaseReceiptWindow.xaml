<Window x:Class="LogisticsWPF.Windows.InventoryReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оприходование на склад"
        Width="400"
        Height="Auto"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundColor}"
        FontFamily="{StaticResource AppFont}">

    <Border Padding="20">
        <StackPanel>
            <TextBlock Text="Приемка товара"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryColor}"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Компонент (товар)" FontWeight="SemiBold"/>
            <ComboBox x:Name="ComponentComboBox"
                      DisplayMemberPath="Title"
                      SelectedValuePath="ComponentID"/>

            <TextBlock Text="Склад" Margin="0,10,0,0" FontWeight="SemiBold"/>
            <ComboBox x:Name="StorageComboBox"
                      DisplayMemberPath="Title"
                      SelectedValuePath="StorageID"/>

            <TextBlock Text="Количество к добавлению" Margin="0,10,0,0" FontWeight="SemiBold"/>
            <TextBox x:Name="QuantityTextBox"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button Content="Оприходовать"
                        Width="140"
                        Height="35"
                        Click="Save_Click"
                        Background="{StaticResource AccentColor}"/>
                <Button Content="Отмена"
                        Width="120"
                        Height="35"
                        Margin="10,0,0,0"
                        Click="Cancel_Click"
                        Background="#B0B9C2"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
