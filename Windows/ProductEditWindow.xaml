<Window x:Class="LogisticsWPF.Windows.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование продукции"
        Width="420"
        Height="Auto"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundColor}"
        FontFamily="{StaticResource AppFont}">
    <Border Padding="20">
        <StackPanel>
            <!-- Заголовок -->
            <TextBlock Text="Данные продукции"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryColor}"
                       Margin="0,0,0,20"/>

            <!-- Форма ввода -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="500">
                <StackPanel>
                    <TextBlock Text="Артикул (SKU)" FontWeight="SemiBold"/>
                    <TextBox x:Name="SkuTextBox"/>

                    <TextBlock Text="Полное наименование" Margin="0,10,0,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="FullTitleTextBox"/>

                    <TextBlock Text="Категория" Margin="0,10,0,0" FontWeight="SemiBold"/>
                    <ComboBox x:Name="CategoryComboBox"
                              DisplayMemberPath="Title"
                              SelectedValuePath="CategoryID"/>

                    <TextBlock Text="Единица измерения" Margin="0,10,0,0" FontWeight="SemiBold"/>
                    <ComboBox x:Name="MeasureComboBox"
                              DisplayMemberPath="Name"
                              SelectedValuePath="MeasureID"/>

                    <TextBlock Text="Статус" Margin="0,10,0,0" FontWeight="SemiBold"/>
                    <ComboBox x:Name="StatusComboBox"
                              DisplayMemberPath="StatusName"
                              SelectedValuePath="StatusID"/>

                    <TextBlock Text="Описание (детали)" Margin="0,10,0,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="DetailsTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопки управления -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button Content="Сохранить"
                        Width="120"
                        Height="35"
                        Click="SaveButton_Click"
                        Background="{StaticResource AccentColor}"/>
                <Button Content="Отмена"
                        Width="120"
                        Height="35"
                        Margin="10,0,0,0"
                        Click="CancelButton_Click"
                        Background="#B0B9C2"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
