<Window x:Class="LogisticsWPF.Windows.SupplyOrderEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование заказа на поставку"
        Width="420"
        Height="Auto"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundColor}"
        FontFamily="{StaticResource AppFont}">
    <Border Padding="20">
        <StackPanel>
            <!-- Заголовок -->
            <TextBlock Text="Данные заказа"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryColor}"
                       Margin="0,0,0,20"/>

            <!-- Форма ввода -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="500">
                <StackPanel>
                    <TextBlock Text="Поставщик" FontWeight="SemiBold"/>
                    <ComboBox x:Name="VendorComboBox"
                              DisplayMemberPath="CompanyTitle"
                              SelectedValuePath="VendorID"/>

                    <TextBlock Text="Склад назначения" Margin="0,10,0,0" FontWeight="SemiBold"/>
                    <ComboBox x:Name="StorageComboBox"
                              DisplayMemberPath="Title"
                              SelectedValuePath="StorageID"/>

                    <TextBlock Text="Ответственный сотрудник" Margin="0,10,0,0" FontWeight="SemiBold"/>
                    <ComboBox x:Name="StaffComboBox"
                              DisplayMemberPath="FullName"
                              SelectedValuePath="StaffID"/>

                    <TextBlock Text="Статус заказа" Margin="0,10,0,0" FontWeight="SemiBold"/>
                    <ComboBox x:Name="StatusComboBox"
                              DisplayMemberPath="StatusName"
                              SelectedValuePath="StatusID"/>

                    <TextBlock Text="Дата заказа" Margin="0,10,0,0" FontWeight="SemiBold"/>
                    <DatePicker x:Name="OrderDatePicker"/>

                    <TextBlock Text="Ожидаемая дата доставки" Margin="0,10,0,0" FontWeight="SemiBold"/>
                    <DatePicker x:Name="DeliveryDatePicker"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопки управления -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button Content="Сохранить"
                        Width="120"
                        Height="35"
                        Click="Save_Click"
                        Background="{StaticResource AccentColor}"/>
                <Button Content="Отмена"
                        Width="120"
                        Height="35"
                        Margin="10,0,0,0"
                        Click="Cancel_Click"
                        Background="#B0B9C2"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
