<Window x:Class="LogisticsWPF.Windows.SupplierEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование поставщика"
        Width="420"
        Height="Auto"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundColor}"
        FontFamily="{StaticResource AppFont}">
    <Border Padding="20">
        <StackPanel>
            <!-- Заголовок -->
            <TextBlock Text="Данные поставщика"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryColor}"
                       Margin="0,0,0,20"/>

            <!-- Форма ввода -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="500">
                <StackPanel>
                    <TextBlock Text="ИНН (Tax Number)" FontWeight="SemiBold"/>
                    <TextBox x:Name="TaxNumberTextBox"/>

                    <TextBlock Text="Наименование компании" Margin="0,10,0,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="CompanyTitleTextBox"/>

                    <TextBlock Text="Контактный Email" Margin="0,10,0,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="EmailTextBox"/>

                    <TextBlock Text="Рейтинг (0-5)" Margin="0,10,0,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="RatingTextBox"/>

                    <TextBlock Text="Условия оплаты" Margin="0,10,0,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="PayConditionsTextBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопки управления -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button Content="Сохранить"
                        Width="120"
                        Height="35"
                        Click="SaveButton_Click"
                        Background="{StaticResource AccentColor}"/>
                <Button Content="Отмена"
                        Width="120"
                        Height="35"
                        Margin="10,0,0,0"
                        Click="CancelButton_Click"
                        Background="#B0B9C2"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
